<div>
  <%= form.label :exercise_id, "Exercise" %><br>
  <%= form.collection_select :exercise_id, exercises, :id, :name, include_blank: true %>
</div>

<div>
  <%= form.label :sets, "Sets" %><br>
  <%= form.number_field :sets, min: 1 %>
</div>

<div>
  <%= form.label :reps, "Reps" %><br>
  <%= form.number_field :reps, min: 1 %>
</div>

<div>
  <%= form.label :order, "Order" %><br>
  <%= form.select :order, options_for_select((1..20).to_a), include_blank: true %>
</div>


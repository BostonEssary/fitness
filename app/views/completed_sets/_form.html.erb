<%= form_with model: completed_set do |form| %>
  <fieldset class="flex gap-8 items-center bg-background border border-border p-4 m-2 rounded-md">
    <%= form.hidden_field :entry_id, value: entry.id %>
    <%= form.hidden_field :workout_id, value: completed_set.workout.id %>

    <div class="flex gap-2 items-center">
      <legend class="text-foreground">Set <%= order %></legend>

      <div>
        <%= form.label :reps, "Reps", class: "text-muted-foreground block text-xs" %>
        <%= form.number_field :reps, min: 1, class: "bg-background border border-border rounded-md p-2 w-24 focus:outline-none focus:ring-2 focus:ring-primary", placeholder: "Enter Reps" %>
      </div>
      <div>
        <%= form.label :weight, "Weight", class: "text-muted-foreground block text-xs" %>
        <%= form.number_field :weight, min: 1, step: 0.5, class: "bg-background border border-border rounded-md p-2 w-24 focus:outline-none focus:ring-2 focus:ring-primary", placeholder: "Enter Weight" %>
      </div>
      <%= form.submit "Save", class: "btn-primary px-4 py-2 rounded-md hover:bg-primary/80 cursor-pointer" %>
      <% if completed_set.persisted? %>
        <%= link_to "Cancel", completed_set_path(completed_set), class: "btn-link" %>
      <% end %>
    </div>
  </fieldset>
<% end %>